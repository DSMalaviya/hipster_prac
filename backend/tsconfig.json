{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",
  "compilerOptions": {
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "module": "nodenext",
    "target": "es2022",
    "moduleResolution": "node16",
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./src", // Root directory of your TypeScript source files
    "esModuleInterop": true, // Enables compatibility between CommonJS and ES modules
    "forceConsistentCasingInFileNames": true, // Ensures consistent casing in file imports
    "strict": true, // Enables all strict type-checking options
    "skipLibCheck": true // Skips type checking of declaration files
  },
  "include": ["src/**/*"], // Specifies files to be included in compilation
  "exclude": ["node_modules"] // Specifies files/directories to be excluded
}
